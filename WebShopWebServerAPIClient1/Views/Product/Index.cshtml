
@{
    ViewData["Title"] = "List of Products";
}


<h1 class="align-content-center">Menu</h1>

<hr />


    <div @*style="margin-top: 140px;"*@>

        <table class="table" ">
            <thead>
               @* Define roll of cells*@ <tr class="text-center">
                 @* header cell*@   <th>Name</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                     @* data cell*@   <td class="align-middle">
                          @item.Name
                        </td>
                        <td class="align-middle">
                           @item.Price DKK
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary " asp-action="" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Order </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
